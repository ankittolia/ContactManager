<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.contactmanager"
    android:installLocation="auto"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar" >
        <activity
            android:name="com.contactmanager.SplashScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
           android:icon="@drawable/appicon"
            android:name="com.contactmanager.MainActivity"
            android:label="@string/app_name" />
        <activity
            android:icon="@drawable/appicon"
            android:name="com.contactmanager.AddContact"
            android:label="@string/addContact" />
        <activity
            android:icon="@drawable/appicon"
            android:name="com.contactmanager.ContactOpen"
            android:label="@string/viewContact"
            android:windowSoftInputMode="stateAlwaysHidden" />
    </application>

</manifest>